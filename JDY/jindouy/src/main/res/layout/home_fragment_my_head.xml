<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp160"
        android:background="#4090FF"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="@dimen/mydp290"
            android:layout_height="@dimen/mydp40"
            android:background="@drawable/bg_select_ss"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edit_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="请输入订单编号"
                android:textColor="#666666"
                android:textSize="@dimen/mysp12" />
            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/mydp8"
                android:clickable="true"
                android:src="@mipmap/ewm" />
            <TextView
                android:id="@+id/tv_find"
                android:layout_width="@dimen/mydp64"
                android:layout_height="match_parent"
                android:background="@drawable/banyuanjiao_selector"
                android:enabled="true"
                android:gravity="center"
                android:text="查 找"
                android:textColor="#ffffff"
                android:textSize="24px" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp77"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_addressee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="@dimen/mydp35"
                android:layout_height="@dimen/mydp36"
                android:layout_marginLeft="@dimen/mydp48"
                android:layout_marginTop="@dimen/mydp21"
                android:background="@drawable/tv_bg_select_a"
                android:gravity="center"
                android:text="收"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/mysp17" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp93"
                android:layout_marginTop="@dimen/mydp25"
                android:text="收    件"
                android:textColor="#333333"
                android:textSize="@dimen/mysp13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp93"
                android:layout_marginTop="@dimen/mydp43"
                android:text="收取快件"
                android:textColor="#999999"
                android:textSize="@dimen/mysp10" />
        </RelativeLayout>
        <View
            android:layout_width="@dimen/mydp0.5"
            android:layout_height="match_parent"
            android:background="#EEEEEE" />
        <RelativeLayout
            android:id="@+id/rl_getpiece"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="@dimen/mydp35"
                android:layout_height="@dimen/mydp36"
                android:layout_marginLeft="@dimen/mydp48"
                android:layout_marginTop="@dimen/mydp21"
                android:background="@drawable/tv_bg_select_b"
                android:gravity="center"
                android:text="取"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/mysp17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp93"
                android:layout_marginTop="@dimen/mydp25"
                android:text="取    件"
                android:textColor="#333333"
                android:textSize="@dimen/mysp13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp93"
                android:layout_marginTop="@dimen/mydp43"
                android:text="领取快件"
                android:textColor="#999999"
                android:textSize="@dimen/mysp10" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp15"
        android:background="#EEEEEE" />

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp37"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/mydp1"
            android:layout_height="@dimen/mydp14"
            android:layout_marginLeft="@dimen/mydp10"
            android:background="#4090FF" />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp5"
            android:text="最新消息"
            android:textColor="#333333"
            android:textSize="@dimen/mysp12" />
    </LinearLayout>
</LinearLayout>