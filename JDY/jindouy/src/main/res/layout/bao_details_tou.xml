<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bao_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jindouy.station_android.module.activity.BaoDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp94"
        android:layout_marginTop="@dimen/mydp10"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/iv_bao_icon"
            android:layout_width="@dimen/mydp61"
            android:layout_height="@dimen/mydp61"
            android:layout_marginBottom="@dimen/mydp10"
            android:layout_marginLeft="@dimen/mydp15"
            android:layout_marginTop="@dimen/mydp19"
            android:src="@mipmap/qdz" />
        <TextView
            android:id="@+id/tv_bao_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp87"
            android:layout_marginTop="@dimen/mydp24"
            android:text="包裹名称"
            android:textColor="#666666"
            android:textSize="@dimen/mysp19" />
        <TextView
            android:id="@+id/tv_bao_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp88"
            android:layout_marginTop="@dimen/mydp62"
            android:text="包裹号：1234567890 "
            android:textColor="#999999"
            android:textSize="@dimen/mysp14" />
        <TextView
            android:id="@+id/tv_bao_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mydp15"
            android:layout_marginTop="@dimen/mydp26"
            android:text="3Kg"
            android:textColor="#666666"
            android:textSize="@dimen/mysp16" />
        <TextView
            android:id="@+id/tv_bao_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mydp15"
            android:layout_marginTop="@dimen/mydp62"
            android:text="2016.08.08 14:00"
            android:textColor="#999999"
            android:textSize="@dimen/mysp14" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp0.5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp37"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp11"
            android:layout_weight="1"
            android:text="打包站点"
            android:textColor="#999999"
            android:textSize="@dimen/mysp12" />
        <TextView
            android:id="@+id/tv_bao_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mydp11"
            android:text="回龙观基站"
            android:textColor="#999999"
            android:textSize="@dimen/mysp11" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp0.5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp37"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp11"
            android:layout_weight="1"
            android:text="快件数量"
            android:textColor="#999999"
            android:textSize="@dimen/mysp12" />
        <TextView
            android:id="@+id/tv_bao_number_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mydp11"
            android:text="30件"
            android:textColor="#999999"
            android:textSize="@dimen/mysp11" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp12" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp34"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_bao_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp11"
            android:layout_weight="1"
            android:text="物流信息"
            android:textColor="#666666"
            android:textSize="@dimen/mysp13" />
    </LinearLayout>
</LinearLayout>
