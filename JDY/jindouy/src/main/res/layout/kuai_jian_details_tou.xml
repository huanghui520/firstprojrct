<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp94"
        android:layout_marginTop="@dimen/mydp10"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/iv_bao_icon"
            android:layout_width="@dimen/mydp61"
            android:layout_height="@dimen/mydp61"
            android:layout_marginBottom="@dimen/mydp10"
            android:layout_marginLeft="@dimen/mydp15"
            android:layout_marginTop="@dimen/mydp19"
            android:src="@mipmap/kjhz" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp87"
            android:layout_marginTop="@dimen/mydp24"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_addressera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发件人"
                android:textColor="#666666"
                android:textSize="@dimen/mysp19" />
            <ImageView
                android:layout_marginTop="@dimen/mydp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp17"
                android:src="@mipmap/jt"/>
            <TextView
                android:id="@+id/tv_recipients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp14"
                android:text="收件人"
                android:textSize="@dimen/mysp19" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_kuaijian_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp88"
            android:layout_marginTop="@dimen/mydp62"
            android:text="包裹号：1234567890 "
            android:textColor="#999999"
            android:textSize="@dimen/mysp14" />
        <TextView
            android:id="@+id/tv_kuaijian_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mydp15"
            android:layout_marginTop="@dimen/mydp26"
            android:text="3Kg"
            android:textColor="#666666"
            android:textSize="@dimen/mysp16" />
        <TextView
            android:id="@+id/tv_kuaijian_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mydp15"
            android:layout_marginTop="@dimen/mydp62"
            android:text="2016.08.08 14:00"
            android:textColor="#999999"
            android:textSize="@dimen/mysp14" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp0.5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp36"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp11"
            android:text="始发地"
            android:textColor="#999999"
            android:textSize="@dimen/mysp12" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_start_a"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mydp8"
            android:layout_marginRight="@dimen/mydp11"
            android:text="回龙观基站"
            android:textColor="#999999"
            android:textSize="@dimen/mysp10" />
        <TextView
            android:id="@+id/tv_start_b"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/mydp20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mydp10"
            android:text="回龙观首开智慧社1209"
            android:textColor="#999999"
            android:textSize="@dimen/mysp10" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp0.5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp36"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp11"
            android:text="目的地"
            android:textColor="#999999"
            android:textSize="@dimen/mysp12" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_destination_a"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mydp8"
                android:layout_marginRight="@dimen/mydp11"
                android:text="回龙观基站"
                android:textColor="#999999"
                android:textSize="@dimen/mysp10" />
            <TextView
                android:id="@+id/tv_destination_b"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/mydp20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mydp10"
                android:text="回龙观首开智慧社1209"
                android:textColor="#999999"
                android:textSize="@dimen/mysp10" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp0.5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp36"
        android:background="#FFFFFF"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp11"
            android:layout_weight="1"
            android:text="快件类型"
            android:textColor="#999999"
            android:textSize="@dimen/mysp12" />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mydp11"
            android:text="文具"
            android:textColor="#999999"
            android:textSize="@dimen/mysp11" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp15" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp34"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_kuaijian_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp11"
            android:layout_weight="1"
            android:text="物流信息"
            android:textColor="#666666"
            android:textSize="@dimen/mysp13" />
    </LinearLayout>
</LinearLayout>