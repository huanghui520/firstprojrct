<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp62"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/iv_bao_icon"
            android:layout_width="@dimen/mydp40"
            android:layout_height="@dimen/mydp40"
            android:layout_marginBottom="@dimen/mydp10"
            android:layout_marginLeft="@dimen/mydp10"
            android:layout_marginTop="@dimen/mydp13"
            android:src="@mipmap/kjhz" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp58"
            android:layout_marginTop="@dimen/mydp14"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_addressera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发件人"
                android:textColor="#666666"
                android:textSize="@dimen/mysp13" />
            <ImageView
                android:src="@mipmap/jt"
                android:layout_marginTop="@dimen/mydp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp17"
                 />
            <TextView
                android:id="@+id/tv_recipients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp14"
                android:text="收件人"
                android:textSize="@dimen/mysp13" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_kuaijian_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp58"
            android:layout_marginTop="@dimen/mydp39"
            android:text="包裹号：1234567890 "
            android:textColor="#999999"
            android:layout_marginBottom="@dimen/mydp12"
            android:textSize="@dimen/mysp10" />
        <TextView
            android:id="@+id/tv_kuaijian_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mydp11"
            android:layout_marginTop="@dimen/mydp15"
            android:text="3Kg"
            android:textColor="#666666"
            android:textSize="@dimen/mysp11" />
        <TextView
            android:id="@+id/tv_kuaijian_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mydp10"
            android:layout_marginTop="@dimen/mydp39"
            android:text="2016.08.08 14:00"
            android:textColor="#999999"
            android:textSize="@dimen/mysp10" />
    </RelativeLayout>
</LinearLayout>