<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp45"
        android:background="#4090FF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/mydp16" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp141"
        android:background="#4090FF">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/mydp104"
            android:text="斤斗云昌平区中转站"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/mysp13" />

        <com.jindouy.station_android.view.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/mydp74"
            android:layout_height="@dimen/mydp74"
            android:layout_marginTop="16dp"
            android:background="#4090FF"
            android:src="@drawable/ic_launcher"
            app:border_color="#FFFFFF"
            app:border_width="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp10"/>
    <LinearLayout
        android:id="@+id/ll_my_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp50"
        android:layout_marginTop="@dimen/mydp1"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp10"
            android:src="@mipmap/wdzh" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp8"
            android:text="我的账户"
            android:textColor="#666666"
            android:textSize="@dimen/mydp15" />
        <ImageView
            android:layout_width="@dimen/mydp8"
            android:layout_height="@dimen/mydp15"
            android:layout_marginRight="@dimen/mydp10"
            android:src="@mipmap/xy" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_fajian_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp50"
        android:layout_marginTop="@dimen/mydp1"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp10"
            android:src="@mipmap/fjjl" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp8"
            android:text="发件记录 "
            android:textColor="#666666"
            android:textSize="@dimen/mydp15" />
        <ImageView
            android:layout_width="@dimen/mydp8"
            android:layout_height="@dimen/mydp15"
            android:layout_marginRight="@dimen/mydp10"
            android:src="@mipmap/xy" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_guanyu_we"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp50"
        android:layout_marginTop="@dimen/mydp1"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp10"
            android:src="@mipmap/gywm" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp8"
            android:text="关于我们"
            android:textColor="#666666"
            android:textSize="@dimen/mydp15" />
        <ImageView
            android:layout_width="@dimen/mydp8"
            android:layout_height="@dimen/mydp15"
            android:layout_marginRight="@dimen/mydp10"
            android:src="@mipmap/xy" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_system_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp50"
        android:layout_marginTop="@dimen/mydp1"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp10"
            android:src="@mipmap/xtsz" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mydp8"
            android:text="系统设置"
            android:textColor="#666666"
            android:textSize="@dimen/mydp15" />
        <ImageView
            android:layout_width="@dimen/mydp8"
            android:layout_height="@dimen/mydp15"
            android:layout_marginRight="@dimen/mydp10"
            android:src="@mipmap/xy" />
    </LinearLayout>
</LinearLayout>