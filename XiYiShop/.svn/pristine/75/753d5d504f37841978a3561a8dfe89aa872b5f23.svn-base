<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shang_pin_xiangqing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fajuary.xiyishop_android.module.activity.ShangPinXiangqingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp45"
        android:background="#12B7F5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/mydp12"
            android:layout_height="@dimen/mydp22"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/mydp11"
            android:clickable="true"
            android:src="@mipmap/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="商品详情"
            android:textColor="#FEFFFF"
            android:textSize="@dimen/mydp17" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp201"
        android:scaleType="fitXY"
        android:src="@mipmap/default_goodsimg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mydp11"
        android:layout_marginTop="@dimen/mydp10"
        android:text="纽斯洗浴SPA"
        android:textColor="#2A2B2B"
        android:textSize="@dimen/mysp17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mydp11"
        android:layout_marginTop="@dimen/mydp9"
        android:text="价格：￥2000"
        android:textColor="#DD0505"
        android:textSize="@dimen/mysp15" />
    <View
        android:layout_marginTop="@dimen/mydp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp10"
        android:background="#EEEEEE"
        />
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/mydp15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品介绍"
            android:textSize="@dimen/mysp17"
            android:textColor="#151616"
            />
        <TextView
            android:layout_marginTop="@dimen/mydp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="极致奢华，绝美体验！"
            android:textSize="@dimen/mysp14"
            android:textColor="#151616"
            />
    </LinearLayout>


</LinearLayout>
