<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycleview_orderstatesitem_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mydp20"
                android:layout_marginLeft="@dimen/mydp11"
                android:layout_marginTop="@dimen/mydp20"
                android:text="王先生"
                android:textSize="@dimen/mysp12" />

            <TextView
                android:id="@+id/tv_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp10"
                android:layout_marginTop="@dimen/mydp20"
                android:text="于2016.08.08 16:00 购买SPA套餐"
                android:textSize="@dimen/mysp12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/mydp61"
            android:layout_marginRight="@dimen/mydp11"
            android:layout_marginTop="@dimen/mydp20"
            android:text="下单成功"
            android:textColor="@color/orderlst_txtcolor"
            android:textSize="@dimen/mysp12" />
    </RelativeLayout>

</LinearLayout>
