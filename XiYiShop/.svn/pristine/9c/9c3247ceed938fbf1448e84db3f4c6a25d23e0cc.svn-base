<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modification_activty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context="com.fajuary.xiyishop_android.module.activity.ModificationActivty">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp45"
        android:background="#12B7F5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/mydp12"
            android:layout_height="@dimen/mydp22"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/mydp11"
            android:src="@mipmap/left"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="修改密码"
            android:textColor="#FEFFFF"
            android:textSize="@dimen/mydp17" />
    </RelativeLayout>

    <EditText
        android:textCursorDrawable="@null"
        android:digits=".0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
        android:layout_marginTop="@dimen/mydp51"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp46"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/mydp12"
        android:layout_marginRight="@dimen/mydp13"
        android:background="@drawable/bg_edittext"
        android:hint="输入原始密码"
        android:paddingLeft="@dimen/mydp10" />
    <EditText
        android:textCursorDrawable="@null"
        android:digits=".0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
        android:layout_marginTop="@dimen/mydp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp46"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/mydp12"
        android:layout_marginRight="@dimen/mydp13"
        android:background="@drawable/bg_edittext"
        android:hint="请输入新密码"
        android:paddingLeft="@dimen/mydp10" />
    <EditText
        android:textCursorDrawable="@null"
        android:digits=".0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
        android:layout_marginTop="@dimen/mydp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp46"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/mydp12"
        android:layout_marginRight="@dimen/mydp13"
        android:background="@drawable/bg_edittext"
        android:hint="确认新密码"
        android:paddingLeft="@dimen/mydp10" />

    <TextView
        android:id="@+id/tv_tijiao"
        android:clickable="true"
        android:layout_marginLeft="@dimen/mydp8"
        android:layout_marginRight="@dimen/mydp11"
        android:layout_marginTop="@dimen/mydp30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp46"
        android:text="找回密码"
        android:textColor="#ffffff"
        android:textSize="@dimen/mydp17"
        android:gravity="center"
        android:background="@drawable/bg_tijiaoshenqing"
        />
</LinearLayout>
