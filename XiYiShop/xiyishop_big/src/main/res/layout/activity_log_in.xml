<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_log_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fajuary.xiyishop_big_android.LogInActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp45"
        android:background="#12B7F5"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="登陆"
            android:textColor="#FEFFFF"
            android:textSize="@dimen/mydp17" />
    </RelativeLayout>
    <EditText
        android:digits=".0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
        android:id="@+id/et_phone"
        android:textCursorDrawable="@null"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp45"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/mydp12"
        android:layout_marginRight="@dimen/mydp13"
        android:layout_marginTop="@dimen/mydp52"
        android:background="@drawable/bg_edittext"
        android:hint="请输入您的账号"
        android:textSize="15sp"
        android:paddingLeft="@dimen/mydp19" />
    <EditText
        android:id="@+id/et_psw"
        android:textCursorDrawable="@null"
        android:inputType="textPassword"
        android:digits=".0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp45"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/mydp12"
        android:layout_marginRight="@dimen/mydp13"
        android:layout_marginTop="@dimen/mydp25"
        android:background="@drawable/bg_edittext"
        android:hint="请输入您的登陆密码"
        android:textSize="15sp"
        android:paddingLeft="@dimen/mydp19" />
    <RelativeLayout
        android:id="@+id/rl_code_yanz"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp45"
        android:layout_marginLeft="@dimen/mydp11"
        android:layout_marginRight="@dimen/mydp13"
        android:layout_marginTop="@dimen/mydp17"
        android:background="@drawable/bg_yanzhengma">
        <EditText
            android:id="@+id/et_code"
            android:layout_width="180dp"
            android:layout_height="@dimen/mydp40"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/mydp17"
            android:background="@null"
            android:hint="请输入验证码"
            android:numeric="integer"
            android:paddingLeft="@dimen/mydp14"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/mysp15" />
        <Button
            android:id="@+id/tv_huqu_codea"
            android:layout_width="116dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mydp5"
            android:background="#12B7F5"
            android:clickable="true"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_langding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp46"
        android:layout_marginLeft="@dimen/mydp8"
        android:layout_marginRight="@dimen/mydp11"
        android:layout_marginTop="@dimen/mydp42"
        android:background="@drawable/bg_tijiaoshenqing"
        android:clickable="true"
        android:gravity="center"
        android:text="登陆"
        android:textColor="#ffffff"
        android:textSize="@dimen/mydp17" />
</LinearLayout>
