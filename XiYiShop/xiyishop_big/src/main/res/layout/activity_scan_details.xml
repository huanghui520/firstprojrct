<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scan_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fajuary.xiyishop_big_android.ScanDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp44"
        android:background="#12B7F5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="@dimen/mydp80"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/mydp12"
                android:layout_height="@dimen/mydp22"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/mydp11"
                android:clickable="true"
                android:src="@mipmap/left" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="订单详情"
            android:textColor="#FEFFFF"
            android:textSize="@dimen/mysp17" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_dingdan_a"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mydp60"
                android:layout_marginTop="@dimen/mydp10"
                android:background="#FFFFFF"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mydp8"
                    android:text="订单详情"
                    android:textColor="#2A2B2B"
                    android:textSize="@dimen/mydp16" />

                <TextView
                    android:id="@+id/tv_tuikuan_statar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/mydp9"
                    android:layout_marginRight="@dimen/mydp10"
                    android:textColor="#DD0505"
                    android:textSize="@dimen/mydp12" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mydp0.5"
                android:background="#A0A0A0" />

            <RelativeLayout
                android:id="@+id/rl_dingdan_b"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mydp160"
                android:layout_marginTop="@dimen/mydp10"
                android:background="#FFFFFF"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_dingdan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mydp10"
                    android:layout_marginTop="@dimen/mydp11"
                    android:textColor="#353434"
                    android:textSize="@dimen/mysp14" />
                <TextView
                    android:text="购买数量"
                    android:id="@+id/tv_dingdan_shuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mydp10"
                    android:layout_marginTop="@dimen/mydp45"
                    android:textColor="#353434"
                    android:textSize="@dimen/mysp14" />
                <TextView
                    android:text="使用数量"
                    android:id="@+id/tv_dingdan_shuliang_shiy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mydp10"
                    android:layout_marginTop="@dimen/mydp65"
                    android:textColor="#353434"
                    android:textSize="@dimen/mysp14" />
                <TextView
                    android:text="订单编号"
                    android:id="@+id/tv_dingdan_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mydp10"
                    android:layout_marginTop="@dimen/mydp90"
                    android:textColor="#353434"
                    android:textSize="@dimen/mysp14" />

                <TextView
                    android:id="@+id/tv_advance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mydp10"
                    android:layout_marginTop="@dimen/mydp120"
                    android:textColor="#353434"
                    android:textSize="@dimen/mysp14" />

            </RelativeLayout>
            <!--android:background="@drawable/bg_tijiaoshenqing"-->
            <TextView
                android:enabled="true"
                android:id="@+id/tv_weikuan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mydp45"
                android:layout_marginLeft="@dimen/mydp10"
                android:layout_marginRight="@dimen/mydp10"
                android:layout_marginTop="@dimen/mydp15"
                android:background="#12B7F5"
                android:clickable="true"
                android:gravity="center"
                android:text="收 款"
                android:textColor="#ffffff"
                android:textSize="@dimen/mydp17" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
