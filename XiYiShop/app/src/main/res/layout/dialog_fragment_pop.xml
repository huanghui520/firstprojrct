<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffffff" 
    android:minWidth="300dp">

    <!-- 弹出两个按钮或者一个按钮的对话框 -->

    <TextView
        android:id="@+id/pop_dialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="标题"
        android:textColor="#ff000000"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/pop_dialog_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="显示内容显示内容显示内容显示内容显示内容显示内容显示内容显示内容显示内容显示内容显示内容显示内容"
        android:textColor="#ff000000"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffdddddd" />

    <RelativeLayout
        android:id="@+id/pop_dialog_rl_two_button"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <View
            android:id="@+id/pop_dialog_view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#ffdddddd" />

        <TextView
            android:id="@+id/pop_dialog_tv_left_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/pop_dialog_view1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pop_dialog_tv_right_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/pop_dialog_view1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffff4444"
            android:textSize="15sp" />
    </RelativeLayout>
    
	 <TextView
            android:id="@+id/pop_dialog_tv_one_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffff4444"
            android:textSize="15sp" />
</LinearLayout>