<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp45"
        android:background="#12B7F5"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="@dimen/mydp80"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/mydp12"
                android:layout_height="@dimen/mydp22"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/mydp11"
                android:clickable="true"
                android:src="@mipmap/left" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="订单详情"
            android:textColor="#FEFFFF"
            android:textSize="@dimen/mysp17" />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydp61"
            android:layout_marginTop="@dimen/mydp10"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp9"
                android:text="订单基本信息:"
                android:textColor="#2A2B2B"
                android:textSize="@dimen/mydp17" />
            <TextView
                android:id="@+id/tv_tuikuan_statar"
                android:layout_marginRight="@dimen/mydp10"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp9"
                android:textColor="#DD0505"
                android:textSize="@dimen/mydp12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mydp10"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name_dingdanxiangqin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp9"
                android:layout_marginTop="@dimen/mydp15"
                android:textColor="#353434"
                android:textSize="@dimen/mydp15" />

            <TextView
                android:id="@+id/rl_into"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mydp9"
                android:layout_marginTop="@dimen/mydp14"
                android:clickable="true"
                android:text="查看商品"
                android:textColor="#12B7F5"
                android:textSize="@dimen/mysp15" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp9"
                android:layout_marginTop="@dimen/mydp21"
                android:textColor="#353434"
                android:textSize="@dimen/mydp15" />
            <TextView
                android:id="@+id/tv_taocan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mydp9"
                android:layout_marginTop="@dimen/mydp14"
                android:clickable="true"
                android:textColor="#353434"
                android:textSize="@dimen/mysp15" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number_shiyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp9"
                android:layout_marginTop="@dimen/mydp11"
                android:textColor="#353434"
                android:textSize="@dimen/mydp15" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp9"
                android:layout_marginTop="@dimen/mydp11"
                android:textColor="#353434"
                android:textSize="@dimen/mydp15" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dindan_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp9"
                android:layout_marginTop="@dimen/mydp11"
                android:textColor="#353434"
                android:textSize="@dimen/mydp15" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dindan_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp9"
                android:layout_marginTop="@dimen/mydp11"
                android:textColor="#DD0505"
                android:textSize="@dimen/mydp15" />
            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mydp9"
                android:layout_marginTop="@dimen/mydp11"
                android:text="已支付"
                android:textColor="#03A9F4"
                android:textSize="@dimen/mysp15" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/zhuangtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mydp21"
                android:layout_marginLeft="@dimen/mydp9"
                android:layout_marginTop="@dimen/mydp11"
                android:text="订单状态："
                android:textColor="#353434"
                android:textSize="@dimen/mydp15" />

            <TextView
                android:id="@+id/tv_zhuangtai_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mydp21"
                android:layout_marginLeft="@dimen/mydp9"
                android:layout_marginTop="@dimen/mydp11"
                android:layout_toRightOf="@+id/zhuangtai"
                android:textColor="#12B7F5"
                android:textSize="@dimen/mydp15"
                 />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_tongyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mydp10"
                android:background="@drawable/textview_tixianjilu_bg"
                android:gravity="center"
                android:text="同意退款"
                android:textColor="#FEFFFF"
                android:textSize="14dp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_jujue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mydp90"
                android:background="@drawable/textview_tixianjilu_bg"
                android:gravity="center"
                android:text="拒绝退款"
                android:textColor="#FEFFFF"
                android:textSize="14dp" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/yanzheng_jilu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydp45"
            android:layout_marginTop="@dimen/mydp10"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/mydp12"
                android:layout_height="@dimen/mydp22"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mydp9"
                android:src="@mipmap/right"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/mydp11"
                android:text="使用记录"
                android:textColor="#353434"
                android:textSize="@dimen/mydp15" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/weikuan_jilu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydp45"
            android:layout_marginTop="@dimen/mydp10"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/mydp12"
                android:layout_height="@dimen/mydp22"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mydp9"
                android:src="@mipmap/right"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/mydp11"
                android:text="尾款记录"
                android:textColor="#353434"
                android:textSize="@dimen/mydp15" />
        </RelativeLayout>
        <TextView
            android:layout_marginBottom="@dimen/mydp11"
            android:visibility="gone"
            android:id="@+id/tv_queding_dindan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydp46"
            android:layout_marginLeft="@dimen/mydp9"
            android:layout_marginRight="@dimen/mydp11"
            android:layout_marginTop="@dimen/mydp15"
            android:background="@drawable/bg_tijiaoshenqing"
            android:clickable="true"
            android:gravity="center"
            android:text="收取尾款"
            android:textColor="#ffffff"
            android:textSize="@dimen/mydp17" />
    </LinearLayout>
</ScrollView>
    <!--</com.cjj.MaterialRefreshLayout>-->
</LinearLayout>