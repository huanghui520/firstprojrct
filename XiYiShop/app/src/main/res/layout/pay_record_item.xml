<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mydp20"
            android:layout_marginLeft="@dimen/mydp11"
            android:layout_marginRight="@dimen/mydp30"
            android:layout_marginTop="@dimen/mydp20"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#151515"
            android:textSize="@dimen/mysp12" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mydp20"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textColor="#3A93FF"
                android:textSize="@dimen/mysp14" />

            <TextView
                android:id="@+id/tv_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mydp20"
                android:gravity="center_vertical"
                android:text="支付宝支付"
                android:textColor="#3A93FF"
                android:textSize="@dimen/mysp14" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>