<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/mydp10"
        android:id="@+id/iv_icon"
        android:src="@mipmap/default_goodsimg"
        android:layout_width="@dimen/mydp141"
        android:layout_height="@dimen/mydp101"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_marginLeft="@dimen/mydp10"
        android:id="@+id/ll_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_icon"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_taocan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mydp25"
            android:ellipsize="end"
            android:lines="1"
            android:text="SPA金典套餐"
            android:textColor="#111111"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mydp9"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mydp20"
            android:layout_marginBottom="@dimen/mydp20"
            android:text="金额：2000"
            android:textColor="#DB0808"
            android:textSize="16sp"
            />
    </LinearLayout>

        <TextView
            android:id="@+id/tv_all"
            android:layout_marginTop="@dimen/mydp58"
            android:layout_marginRight="@dimen/mydp12"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6B6868"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_all_a"
            android:layout_marginTop="@dimen/mydp78"
            android:layout_marginRight="@dimen/mydp12"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D64D25"
            android:textSize="16sp"/>

</RelativeLayout>