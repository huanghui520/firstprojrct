<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_verify_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context="com.fajuary.xiyishop_android.module.activity.VerifyResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydp44"
        android:background="#12B7F5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="@dimen/mydp80"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/mydp12"
                android:layout_height="@dimen/mydp22"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/mydp11"
                android:clickable="true"
                android:src="@mipmap/left" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="订单详情"
            android:textColor="#FEFFFF"
            android:textSize="@dimen/mysp17" />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_dingdan_a"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydp60"
            android:layout_marginTop="@dimen/mydp10"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp8"
                android:text="订单详情"
                android:textColor="#2A2B2B"
                android:textSize="@dimen/mydp16" />

            <TextView
                android:id="@+id/tv_tuikuan_statar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/mydp9"
                android:layout_marginRight="@dimen/mydp10"
                android:textColor="#DD0505"
                android:textSize="@dimen/mydp12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydp0.5"
            android:background="#A0A0A0" />

        <RelativeLayout
            android:id="@+id/rl_dingdan_b"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydp220"
            android:layout_marginTop="@dimen/mydp10"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dingdan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp10"
                android:layout_marginTop="@dimen/mydp11"
                android:textColor="#353434"
                android:textSize="@dimen/mysp14" />

            <TextView
                android:id="@+id/tv_dingdan_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mydp12"
                android:layout_marginTop="@dimen/mydp10"
                android:text="查看商品"
                android:textColor="#12B7F5"
                android:textSize="@dimen/mysp15" />

            <TextView
                android:id="@+id/tv_dingdan_shuliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp10"
                android:layout_marginTop="@dimen/mydp45"
                android:textColor="#353434"
                android:textSize="@dimen/mysp14" />

            <TextView
                android:id="@+id/tv_dingdan_shuliang_shiy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp10"
                android:layout_marginTop="@dimen/mydp75"
                android:textColor="#353434"
                android:textSize="@dimen/mysp14" />

            <TextView
                android:id="@+id/tv_dingdan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp10"
                android:layout_marginTop="@dimen/mydp108"
                android:textColor="#353434"
                android:textSize="@dimen/mysp14" />

            <TextView
                android:id="@+id/tv_dingdan_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp10"
                android:layout_marginTop="@dimen/mydp141"
                android:textColor="#353434"
                android:textSize="@dimen/mysp14" />

            <TextView
                android:id="@+id/tv_advance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydp10"
                android:layout_marginTop="@dimen/mydp173"
                android:textColor="#353434"
                android:textSize="@dimen/mysp14" />

            <TextView
                android:id="@+id/tv_prepaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mydp11"
                android:layout_marginTop="@dimen/mydp172"
                android:text="已支付"
                android:textColor="#04C94E"
                android:textSize="@dimen/mysp15" />
        </RelativeLayout>
        <!--android:background="@drawable/bg_tijiaoshenqing"-->
        <RelativeLayout
            android:id="@+id/rl_code_yanz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydp45"
            android:layout_marginLeft="@dimen/mydp11"
            android:layout_marginRight="@dimen/mydp13"
            android:layout_marginTop="@dimen/mydp17"
            android:background="@drawable/bg_yanzhengma">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="180dp"
                android:layout_height="@dimen/mydp40"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/mydp17"
                android:background="@null"
                android:hint="请输入验证码"
                android:numeric="integer"
                android:paddingLeft="@dimen/mydp14"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/mysp15" />

            <Button
                android:id="@+id/tv_huqu_code"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mydp5"
                android:background="@drawable/bg_huoquyz"
                android:clickable="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_yanzheng_dingdan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydp45"
            android:layout_marginLeft="@dimen/mydp10"
            android:layout_marginRight="@dimen/mydp10"
            android:layout_marginTop="@dimen/mydp20"
            android:background="@drawable/bg_select_verify_a"
            android:clickable="true"
            android:gravity="center"
            android:text="验证此单"
            android:textColor="#ffffff"
            android:textSize="@dimen/mydp17" />

        <TextView
            android:id="@+id/tv_weikuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydp45"
            android:layout_marginLeft="@dimen/mydp10"
            android:layout_marginRight="@dimen/mydp10"
            android:layout_marginTop="@dimen/mydp15"
            android:background="@drawable/bg_tijiaoshenqing2"
            android:clickable="false"
            android:enabled="false"
            android:gravity="center"
            android:text="收取尾款"
            android:textColor="#ffffff"
            android:textSize="@dimen/mydp17" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
