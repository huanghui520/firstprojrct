<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="@dimen/mydp5"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_details_list_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="wo"
            android:layout_marginBottom="@dimen/mydp10"
            android:textColor="#353434"
            android:layout_marginTop="@dimen/mydp10"
            android:textSize="@dimen/mysp14"
            android:layout_marginLeft="@dimen/mydp10"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#353434"
            android:id="@+id/tv_details_list_item_time"
            android:textSize="@dimen/mysp14"
            android:layout_marginTop="@dimen/mydp10"
            android:layout_marginRight="@dimen/mydp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            />
    </LinearLayout>


</LinearLayout>